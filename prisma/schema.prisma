generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @unique @default(uuid())
  firstName     String
  lastName      String
  email         String   @unique
  document      String   @unique
  password_hash String
  created_at    DateTime @default(now())

  Reserve Reserve[]

  @@map("users")
}

model Event {
  id           String  @id @unique @default(uuid())
  title        String
  description  String
  creator      String
  phone_number String?

  spots           Int
  remaining_spots Int

  latitude  Decimal
  longitude Decimal

  street      String
  number      String
  district    String
  city        String
  state       String
  postal_code String
  complement  String?

  Reserve Reserve[]

  @@map("events")
}

model Reserve {
  id String @id @unique @default(uuid())

  user    User   @relation(fields: [user_id], references: [id])
  user_id String

  reserve  Event  @relation(fields: [event_id], references: [id])
  event_id String

  accepted_at DateTime
  created_at  DateTime

  @@map("reserves")
}
